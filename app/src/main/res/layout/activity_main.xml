        android:layout_margin="0dp" />

    <Button
        android:layout_width="140dp"
        android:layout_height="60dp"
        android:text=")"
        android:id="@+id/btnCP"
        android:textColor="#ffffff"
        android:background="#000000"
        android:height="50dp"
        android:layout_gravity="top|center"
        android:layout_alignTop="@+id/btnComma"
        android:layout_alignLeft="@+id/btnOP"
        android:layout_alignStart="@+id/btnOP"
        android:textSize="25dp"
        android:layout_margin="0dp" />

    <Button
        android:layout_width="180dp"
        android:layout_height="80dp"
        android:text="BINARY"
        android:id="@+id/btnBin"
        android:textColor="#ffffff"
        android:background="#000000"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/output"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:textSize="25dp"
        android:layout_marginBottom="10dp" />

    <Button
        android:layout_width="180dp"
        android:layout_height="80dp"
        android:text="DECIMAL"
        android:id="@+id/btnDec"
        android:textColor="#ffffff"
        android:background="#000000"
        android:textSize="25dp"
        android:layout_alignTop="@+id/btnBin"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="180dp"
        android:layout_height="80dp"
        android:text="HEXADECIMAL"
        android:id="@+id/btnHex"
        android:textColor="#ffffff"
        android:background="#000000"
        android:layout_alignTop="@+id/btnDec"
        android:layout_alignRight="@+id/output"
        android:textSize="25dp"
        android:layout_marginBottom="10dp" />

    <Button
        android:layout_width="320dp"
        android:layout_height="90dp"
        android:text="CLEAR"
        android:id="@+id/btnClear"
        android:textColor="#ffffff"
        android:layout_alignWithParentIfMissing="false"
        android:layout_above="@+id/btnD"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/btnE"
        android:layout_alignEnd="@+id/btnE"
        android:textSize="25dp"
        android:background="#000000"
        android:layout_marginBottom="5dp"
