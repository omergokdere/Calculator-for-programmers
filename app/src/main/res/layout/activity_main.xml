    <Button
        android:layout_width="140dp"
        android:layout_height="60dp"
        android:text=","
        android:id="@+id/btnComma"
        android:textColor="#ffffff"
        android:background="#000000"
        android:height="50dp"
        android:layout_gravity="top|center"
