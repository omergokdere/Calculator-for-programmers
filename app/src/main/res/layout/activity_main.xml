<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.og.calcog.main">


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:id="@+id/input"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:background="@drawable/border"
        android:textSize="50dp"
        android:cursorVisible="true"
        android:textCursorDrawable="@null"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColorLink="#ffffff"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:id="@+id/output"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:background="@drawable/border"
        android:textSize="50dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/input"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="#ffffff" />

    <Button
        android:layout_width="140dp"
        android:layout_height="60dp"
        android:text="0"
        android:id="@+id/btn0"
        android:textColor="#ffffff"
        android:background="#000000"
        android:height="50dp"
        android:layout_gravity="top|center"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/btn1"
        android:layout_alignStart="@+id/btn1"
        android:layout_marginTop="2dp"
        android:layout_alignRight="@+id/btn2"
        android:layout_alignEnd="@+id/btn2"
        android:textSize="25dp"
        android:layout_margin="0dp" />

    <Button
        android:layout_width="140dp"
        android:layout_height="60dp"
        android:text="1"
        android:id="@+id/btn1"
        android:textColor="#ffffff"
        android:background="#000000"
        android:height="50dp"
        android:layout_gravity="top|center"
        android:layout_above="@+id/btn0"
        android:layout_toLeftOf="@+id/btn2"
        android:layout_toStartOf="@+id/btn2"
        android:layout_marginTop="2dp"
        android:textSize="25dp"
        android:layout_margin="0dp" />

    <Button
        android:layout_width="140dp"
        android:layout_height="60dp"
        android:text="2"
        android:id="@+id/btn2"
        android:textColor="#ffffff"
        android:background="#000000"
        android:height="50dp"
        android:layout_gravity="top|center"
        android:layout_above="@+id/btn0"
        android:layout_toLeftOf="@+id/btn6"
        android:layout_toStartOf="@+id/btn6"
