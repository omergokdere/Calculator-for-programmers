        android:layout_toRightOf="@+id/btnB"
        android:layout_toEndOf="@+id/btnB"
        android:layout_marginLeft="5dp"
        android:textSize="25dp"
        android:layout_margin="0dp" />

    <Button
        android:layout_width="140dp"
        android:layout_height="60dp"
        android:text="("
        android:id="@+id/btnOP"
        android:textColor="#ffffff"
        android:background="#000000"
        android:height="50dp"
        android:layout_gravity="top|center"
        android:layout_below="@+id/btnPlus"
        android:layout_alignLeft="@+id/btnPlus"
        android:layout_alignStart="@+id/btnPlus"
        android:layout_marginTop="2dp"
        android:textSize="25dp"
        android:layout_margin="0dp" />

    <Button
        android:layout_width="140dp"
        android:layout_height="60dp"
        android:text="+"
        android:id="@+id/btnPlus"
        android:textColor="#ffffff"
        android:background="#000000"
        android:height="50dp"
        android:layout_gravity="top|center"
        android:layout_below="@+id/btnMinus"
        android:layout_alignLeft="@+id/btnMinus"
        android:layout_alignStart="@+id/btnMinus"
        android:layout_marginTop="2dp"
        android:textSize="25dp"
        android:layout_margin="0dp" />

    <Button
        android:layout_width="140dp"
        android:layout_height="60dp"
        android:text="-"
        android:id="@+id/btnMinus"
        android:textColor="#ffffff"
        android:background="#000000"
